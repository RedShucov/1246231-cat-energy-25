{% extends 'base.njk' %}
{% set title = 'Кэт энерджи: форма' %}
{% set name_page = 'form' %}

{% block content %}
  <section>
    <h1 class="page-title">Подбор программы</h1>

    <form class="form-selection" action="" method="">
      <p class="form-selection__lead">
        Заполните анкету, и мы подберем
        программу питания для вашего кота
      </p>

      <fieldset class="form-selection__fieldset">
        <h2 class="visually-hidden">Личные данные (кота)</h2>

        <ul class="form-selection__section">
          <li>
            <label class="form-selection__label">
              <span class="form-selection__sign">ИМЯ:*</span>
              <input class="form-selection__input" type="text" value="Барсик">
            </label>
          </li>

          <li>
            <label class="form-selection__label">
              <span class="form-selection__sign">Вес (кг):*</span>
              <input class="form-selection__input" type="number" value="7">
            </label>
          </li>

          <li>
            <label class="form-selection__label">
              <span class="form-selection__sign">Возраст (лет):</span>
              <input class="form-selection__input" type="number" value="7">
            </label>
          </li>
        </ul>
      </fieldset>

      <fieldset class="form-selection__fieldset">
        <h2 class="visually-hidden">Цель</h2>
        <ul class="form-selection__section">
          <li>
            <input class="form-selection__radio" type="radio" name="" id="">
            <span class="form-selection__sign">похудение</span>
          </li>
          <li>
            <input class="form-selection__radio" type="radio" name="" id="">
            <span class="form-selection__sign">Набор массы</span>
          </li>
          <li>
            <input class="form-selection__radio" type="radio" name="" id="">
            <span class="form-selection__sign">Не знаю (Нужен ваш совет)</span>
          </li>
        </ul>
      </fieldset>

      <fieldset class="form-selection__fieldset">
        <h2 class="page__sub-title">Контактные данные (владельца кота)</h2>
        <ul class="form-selection__section">
          <li>
            <span class="form-selection__sign">E-mail:*</span>
            <input class="form-selection__text" type="email" name="" id="" value="кuklachev@gmail.com">
          </li>
          <li>
            <span class="form-selection__sign">Телефон:*</span>
            <input class="form-selection__text" type="tel" name="" id="" value="8 (960) 900-60-90">
          </li>
        </ul>
      </fieldset>

      <fieldset class="form-selection__fieldset">
        <h2 class="page__sub-title">Комментарий</h2>
        <textarea name="" id=""></textarea>
      </fieldset>

      <fieldset class="form-selection__fieldset">
        <h2 class="page__sub-title">Дополнительно</h2>
        <ul class="form-selection__section">
          <li>
            <input class="form-selection__checkbox" type="checkbox" name="" id="">
            <span class="form-selection__sign form-selection__sign--accent">Сахарозаменитель</span>
          </li>
          <li>
            <input class="form-selection__checkbox" type="checkbox" name="" id="">
            <span class="form-selection__sign form-selection__sign--accent">Питьевая вода</span>
          </li>
          <li>
            <input class="form-selection__checkbox" type="checkbox" name="" id="">
            <span class="form-selection__sign form-selection__sign--accent">Молоко</span>
          </li>
          <li>
            <input class="form-selection__checkbox" type="checkbox" name="" id="">
            <span class="form-selection__sign form-selection__sign--accent">Витамины</span>
          </li>
        </ul>
      </fieldset>

      <div class="form-selection__footer">
        <button class="form-selection__button" type="submit">Отправить заявку</button>
        <span class="form-selection__required">* — Обязательные поля</span>
      </div>
    </form>
  </section>
{% endblock %}
