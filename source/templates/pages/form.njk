{% extends 'base.njk' %}
{% set title = 'Кэт энерджи: форма' %}
{% set name_page = 'form' %}

{% block content %}
  <div class="container">
<form class="form" action="https://echo.htmlacademy.ru" method="GET">
  {% set form__list = [{
    'title': 'Подбор программы',
    'lead_text': 'Заполните анкету, и мы подберем программу питания для вашего кота',
    'fieldset': [{
      'title': 'Личные данные (кота)',
      'hidden': true,
      'modifier': 'cats',
      'inputs': [{
        'title': 'Имя:*',
        'type': 'text',
        'name': 'name',
        'value': 'Барсик',
        'class': 'text'
      }, {
        'title': 'Вес&nbsp;(кг):*',
        'type': 'number',
        'name': 'weight',
        'value': '7',
        'class': 'text'
      }, {
        'title': 'Возраст&nbsp;(лет):',
        'type': 'number',
        'name': 'age',
        'value': '7',
        'class': 'text'
      }]
    }, {
      'title': 'Цель',
      'hidden': true,
      'modifier': 'target',
      'label': 'radio',
      'inputs': [{
        'title': 'Похудение',
        'type': 'radio',
        'name': 'target',
        'value': 'Похудеть',
        'class': 'radio',
        'checked': true
      }, {
        'title': 'Набор массы',
        'type': 'radio',
        'name': 'target',
        'value': 'Набрать вес',
        'class': 'radio'
      }, {
        'title': 'Не знаю (Нужен ваш совет)',
        'type': 'radio',
        'name': 'target',
        'value': 'Нужен совет',
        'class': 'radio'
      }]
    }, {
      'title': 'Контактные&nbsp;данные (владельца&nbsp;кота)',
      'modifier': 'user',
      'inputs': [{
        'title': 'E-mail:*',
        'type': 'email',
        'name': 'e-mail',
        'value': 'kuklachev@gmail.com',
        'class': 'text',
        'icon': true
      }, {
        'title': 'Телефон:*',
        'type': 'tel',
        'name': 'telephone',
        'value': '8 (960) 900-60-90',
        'class': 'text',
        'icon': true
      }]
    }, {
      'title': 'Комментарий',
      'modifier': 'review',
      'textarea': [{
        'value': 'Расскажите обо всех повадкха кота',
        'name': 'review'
      }]
    }, {
      'title': 'Дополнительно',
      'modifier': 'additional',
      'label': 'checkbox',
      'inputs': [{
        'title': 'Сахарозаменитель',
        'type': 'checkbox',
        'name': 'sugar',
        'value': 'Сахар',
        'class': 'checkbox',
        'checked': true
      }, {
        'title': 'Питьевая вода',
        'type': 'checkbox',
        'name': 'water',
        'value': 'Вода',
        'class': 'checkbox'
      }, {
        'title': 'Молоко',
        'type': 'checkbox',
        'name': 'milk',
        'value': 'Молоко',
        'class': 'checkbox'
      }, {
        'title': 'Витамины',
        'type': 'checkbox',
        'name': 'vitamins',
        'value': 'Витамины',
        'class': 'checkbox'
      }]
    }]
  }] %}

  {% for form in form__list %}
    <h1 class="form__title">{{ form.title}}</h1>

    <p class="form__text-lead">{{ form.lead_text }}</p>

    {% for fieldset in form.fieldset %}
      <fieldset class="form__fieldset form__fieldset--{{ fieldset.modifier }}">
        <h2 class="{% if fieldset.hidden %} visually-hidden {% else %} form__sub-title {% endif %}">{{ fieldset.title | safe }}</h2>

        <div class="form__section form__section--{{ fieldset.modifier }}">
          {% for input in fieldset.inputs %}
            <label class="{% if fieldset.label %} form__label form__label--{{ fieldset.label }} {% else %} form__label {% endif %}">
              <span class="form__sign">{{ input.title | safe }}</span>
              <input class="form__{{ input.class }}" type="{{ input.type }}" name="{{ input.name }}" id="{{ input.name }}-selection" value="{{ input.value }}" {{ 'checked' if input.checked }}>
              {% if input.icon %} <span class="form__input-icon form__input-icon--{{ input.type }}"></span> {% endif %}
            </label>
          {% endfor %}


          {% if fieldset.textarea %}
            {% for textarea in fieldset.textarea %}
              <textarea class="form__textarea" name="{{ textarea.name }}" id="{{ textarea.name }}-selection"> {{ textarea.value }} </textarea>
            {% endfor %}
          {% endif %}
        </div>

      </fieldset>
    {% endfor %}
  {% endfor %}

  <div class="form__footer">
    <button class="form__button button" type="submit">Отправить заявку</button>
    <span class="form__reminder">* — Обязательные поля</span>
  </div>

</form>
  </div>
{% endblock %}
